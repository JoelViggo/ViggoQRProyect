<script>
    document.addEventListener("DOMContentLoaded", function () {
        var cards = document.querySelectorAll(".carousel-card");

        cards.forEach(function (card, index) {
            var colors = ["#bfcde6", "#dfe6f2"]; // Puedes agregar más colores según tus preferencias
            card.style.backgroundColor = colors[index % colors.length];
        });
    });
</script>
<div class="container-fluid pt-3 card-container container-videoYoutube">
    <div class="slick-carousel">
        @foreach (var video in Model)
        {
            <div class="card-container pb-3 carousel-container ">
                <div class="card p-4 carousel carousel-card">
                    <div class="">
                        <iframe width="auto" height="auto" src="https://www.youtube.com/embed/@video.FilePath?autoplay=0&controls=0"
                                title="YouTube video player"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                allowfullscreen></iframe>
                        
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@video.Title</h5>
                        <p class="card-text">@video.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

