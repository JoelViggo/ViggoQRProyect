<div class="container-fluid pt-3 card-container container-videoYoutube">
    <div class="slick-carousel">
        @foreach (var video in Model)
        {
            <div class="card-container pb-3 carousel-container">
                <div class="card p-4 carousel">
                    <div class="card pb-3 min carousel-card">
                        <iframe width="100%" height="600" src="https://www.youtube.com/embed/@video.FilePath?autoplay=0&controls=0"
                                title="YouTube video player"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                allowfullscreen></iframe>
                        <div class="card-body">
                            <h5 class="card-title">@video.Title</h5>
                            <p class="card-text">@video.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

